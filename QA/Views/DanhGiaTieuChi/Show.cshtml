@{
    ViewBag.Title = "Đánh giá tiêu chí";
}

<div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Đánh giá tiêu chí</h2>
                <div class="clearfix"></div>
            </div>
            <!-- end x_title-->
            <div class="x_content">
                <!-- table data-->
                <p class="p-3 mb-2 bg-secondary text-white"><span class="text-primary">Màu xanh</span> là đã đánh giá,<span class="text-danger">màu đỏ</span>  là chưa đánh giá</p>
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>Tiêu chuẩn</th>
                                <th>Nội dung</th>
                                <th>Tiêu chí</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="(mindex,item) in allDanhMuc">
                                <td>{{item.IDTieuChuan}}</td>
                                <td>{{item.NoiDung}}</td>
                                <td>
                                    <table ng-init="GetTieuChi(mindex)" border="0">
                                        <tr>
                                            <td ng-repeat="item1 in item.allDetail">&nbsp;&nbsp;&nbsp;[<a ng-class="{'text-primary' : item1.TCDK != '0', 'text-danger' : item1.TCDK == '0'}" href="#" ng-click="addNew(mindex,$index)">   {{item1.IDTieuChi}}  </a>]</td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <!-- end table data-->
            </div>
            <!-- end x_content-->
        </div>
        <!-- end x_pannel-->
        <!--chi tiet cac tieu chi da duoc du kien-->
        <div class="x_panel">
            <div class="x_title">
                <h2>Các tiêu chí đã đánh giá</h2>
                <div class="clearfix"></div>
            </div>
            <!-- end x_title-->
            <div class="x_content">
                <!-- table data-->
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>Tiêu chuẩn</th>
                                <th>Tiêu chí</th>
                                <th>Nhận xét PGD&DT</th>
                                <th>Nhóm tự đánh giá</th>
                                <th>Tự đánh giá</th>
                                <th>Lấy phiếu</th>
                                <th>#</th>
                                <th>#</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="item in allTieuChiDuKien">
                                <td>{{item.ID}}</td>
                                <td>{{item.NoiDung}}</td>
                                <td><span ng-class="{'fa fa-check' : item.PGDDuyet == true, 'fa fa-close' : item.PGDDuyet == false}"></span></td>
                                <td>{{item.TenNhom}}</td>
                                <td><span ng-class="{'fa fa-check' : item.TuDanhGia == true, 'fa fa-close' : item.TuDanhGia == false}"></span></td>
                                <td>Lấy phiếu</td>
                                <td><a href="#" ng-click="edit($index)">Chi tiết</a></td>
                                <td><a href="#" ng-click="sendDelete($index)">Xóa</a></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <!-- end table data-->
                <!--phan trang-->
                <ul items-per-page="itemPerPage" uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" max-size="maxSize" boundary-link-numbers="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
                <!-- end phan trang-->
            </div>
            <!-- end x_content-->
        </div>
        <!---->
    </div>

