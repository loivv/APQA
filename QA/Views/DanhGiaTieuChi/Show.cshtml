@section scripts {

    <script>

        // tao controller
        var app = angular.module('myApp', ['ui.bootstrap']);

        app.controller('myCtrl', function ($scope, $http) {

            // lay du lieu
            $scope.DanhGia = [];
            $scope.ChiSoA = [];
            $scope.ChiSoB = [];
            $scope.ChiSoC = [];
            $scope.Info = [];
            $scope.TieuChuanTieuChi = [];
            $scope.allDanhMuc = [];
            $scope.GetData = function () {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getTieuChuan"
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allDanhMuc = response.data.data;
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            $scope.GetData();

            //lay danh sach cac tieu chi da dc du kien
            $scope.numPages;
            $scope.itemPerPage;
            $scope.totalItems;
            $scope.currentPage = 1;
            $scope.maxSize = 5;
            $scope.pageChanged = function () {
                $scope.GetData($scope.currentPage);
            };

            // lay du lieu
            $scope.allTieuChiDuKien = [];
            $scope.GetTieuChiDuKienAll = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getDanhGiaTieuChiAll?page=" + page
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allTieuChiDuKien = response.data.data;
                        $scope.itemPerPage = response.data.pageSize;
                        $scope.totalItems = response.data.toltalSize;
                        $scope.numPages = Math.round($scope.totalItems / $scope.itemPerPage);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            $scope.GetTieuChiDuKienAll(1);
            //lay ra thong tin cac chi so
          
            $scope.GetChiSo = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getChiSo?page=" + page + "&idtieuchi=" + search
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allChiSo = response.data.data;
                       
                        $scope.ChiSoA = angular.copy($scope.allChiSo[0]);
                        $scope.ChiSoB = angular.copy($scope.allChiSo[1]);
                        $scope.ChiSoC = angular.copy($scope.allChiSo[2]);
                        //console.log($scope.ChiSoA);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ket thuc lay ra thong tin cac chi so
            $scope.xemchiso = function (index) {

                var infotc = $scope.allTieuChi[index];
                $scope.InfoTC = angular.copy(infotc);

                var info = $scope.allTieuChi[index];
                $scope.Info = angular.copy(info);

                //lay thong tin chi tiet cac chi so
                $scope.GetChiSo(1, $scope.InfoTC.GuiIDTC);

                $scope.modaltitle = "Xem tiêu chí - Tiêu chuẩn: " + $scope.idtchuan + " - Tiêu chí: " + $scope.InfoTC.IDTieuChi;
                $scope.IsAction = 'edit';
                showModel("insertmodal");

            };
            //ham lay chi tiet tieu chi
            $scope.GetTieuChi = function (index) {
                $scope.alldetail = [];
                var info = $scope.allDanhMuc[index];
                $scope.Info = angular.copy(info);

                showLoader(true);
                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getTieuChi?idtieuchuan=" + $scope.Info.GuiID
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allDanhMuc[index].allDetail = response.data.data;
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ket thuc ham lay goi tieu chi

            // action
            $scope.finishForm = function () {
                    if ($scope.IsAction === 'add') {
                        $scope.sendCreate();
                    } else if ($scope.IsAction === 'edit') {
                        $scope.sendCreate();
                    } else if ($scope.IsAction === 'delete') {
                        $scope.sendDelete();
                    }

            }
            $scope.IsAction = '';
            $scope.addNew = function (mindex, id) {
                //kiểm tra xem neu chua co thi load mơi , nếu đã có thì load thông tin
                //gettieuchidukien
                //mindex ==> vi tri cua id tieu chuan , id vi tri cua tieu chi
                
                var info = $scope.allDanhMuc[mindex].allDetail[id];
                $scope.Info = angular.copy(info);
                $scope.GetChiSo(1, $scope.Info.GuiIDTC);
                $scope.TieuChuanTieuChi = $scope.allDanhMuc[mindex].NoiDung + " - " + $scope.Info.NoiDungTC;

                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getDanhGiaTieuChi?idtieuchi=" + $scope.Info.GuiIDTC
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.DanhGia = { "DiemManh": "", "DiemYeu": "", "KeHoachCaiTien": "", "IDTieuChi": $scope.Info.GuiIDTC };
                        $scope.modaltitle = "Chỉnh sửa thông tin" + "  --- Tiêu chuẩn " + (mindex + 1) + "  --- Tiêu chí " + (id + 1);
                        //$scope.ZoneIDDisable = false;
                        $scope.IsAction = 'add';

                        showModel("insertmodal");

                    } else if (response.data.error !== 0) {
                        $scope.DanhGia = response.data.data;
                        //truong hop da ton tai thong in
                        $http({
                            method: "GET",
                            url: "/DanhGiaTieuChi/getChiSoMoTa?guiid=" + $scope.Info.GuiIDTC
                        }).then(function mySuccess(response) {
                            showLoader(false);

                           
                            if (response.data.error === 1) {
                               
                                $scope.allChiSo = response.data.data;
                                $scope.ChiSoA = angular.copy($scope.allChiSo[0]);
                                $scope.ChiSoB = angular.copy($scope.allChiSo[1]);
                                $scope.ChiSoC = angular.copy($scope.allChiSo[2]);
                
                            }

                        }, function myError(response) {
                            showLoader(false);
                            showNotify('Connect error');
                        });
                        //lay thong in

                       // $scope.Info = { "HoatDong": $scope.Info.HoatDong, "NhanLuc": $scope.Info.NhanLuc, "VatLuc": $scope.Info.VatLuc, "ThoiDiem": $scope.Info.ThoiDiem, "GhiChu": $scope.Info.GhiChu, "IDTieuChi": $scope.Info.IDTieuChi };
                        $scope.modaltitle = "Chỉnh sửa thông tin" + "  --- Tiêu chuẩn " + (mindex + 1) + "  --- Tiêu chí " + (id + 1);
                        //$scope.ZoneIDDisable = false;
                        $scope.IsAction = 'add';

                        showModel("insertmodal");
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
                //ket thuc lay dữ liệu điều kiện
            };
            //khi nguoi dung click vao edit
            $scope.edit = function (index) {
                //$scope.TieuChuanTieuChi = $scope.GetTieuChiDuKienAll[index]
                var info = $scope.allTieuChiDuKien[index];

                $scope.TieuChuanTieuChi = info.ND + ' - ' + info.NoiDung;
                $http({
                    method: "GET",
                    url: "/DanhGiaTieuChi/getDanhGiaTieuChi?idtieuchi=" + info.GuiIDTC
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.DanhGia = { "DiemManh": "", "DiemYeu": "", "KeHoachCaiTien": "", "IDTieuChi": info.GuiIDTC };
                        $scope.modaltitle = "Chỉnh sửa thông tin" + "  --- Tiêu chuẩn " + (info.ID) + "  --- Tiêu chí " + info.IDTieuChi;
                        //$scope.ZoneIDDisable = false;
                        $scope.IsAction = 'add';

                        showModel("insertmodal");

                    } else if (response.data.error !== 0) {
                        $scope.DanhGia = response.data.data;
                        //truong hop da ton tai thong in
                        $http({
                            method: "GET",
                            url: "/DanhGiaTieuChi/getChiSoMoTa?guiid=" + info.GuiIDTC
                        }).then(function mySuccess(response) {
                            showLoader(false);


                            if (response.data.error === 1) {

                                $scope.allChiSo = response.data.data;
                                $scope.ChiSoA = angular.copy($scope.allChiSo[0]);
                                $scope.ChiSoB = angular.copy($scope.allChiSo[1]);
                                $scope.ChiSoC = angular.copy($scope.allChiSo[2]);
                            }

                        }, function myError(response) {
                            showLoader(false);
                            showNotify('Connect error');
                        });
                        //lay thong in

                        // $scope.Info = { "HoatDong": $scope.Info.HoatDong, "NhanLuc": $scope.Info.NhanLuc, "VatLuc": $scope.Info.VatLuc, "ThoiDiem": $scope.Info.ThoiDiem, "GhiChu": $scope.Info.GhiChu, "IDTieuChi": $scope.Info.IDTieuChi };
                        $scope.modaltitle = "Chỉnh sửa thông tin" + "  --- Tiêu chuẩn " + (info.ID) + "  --- Tiêu chí " + info.IDTieuChi;
                        //$scope.ZoneIDDisable = false;
                        $scope.IsAction = 'add';

                        showModel("insertmodal");
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
                //ket thuc lay dữ liệu điều kiện
                $scope.IsAction = 'edit';
                showModel("insertmodal");
            };
            //ket thuc
            // them tinh
            $scope.sendCreate = function () {
                showLoader(true);
                $scope.test = {}
                $scope.MoTa = [
                  { IDChiSo:$scope.ChiSoA.GuiID,MoTaHienTrang: $scope.ChiSoA.MoTaHienTrang },
                  { IDChiSo: $scope.ChiSoB.GuiID, MoTaHienTrang: $scope.ChiSoB.MoTaHienTrang },
                  { IDChiSo: $scope.ChiSoC.GuiID, MoTaHienTrang: $scope.ChiSoC.MoTaHienTrang }
                ];

                $http({
                    method: "POST",
                    url: "/DanhGiaTieuChi/create",
                    data: { idtieuchi: $scope.Info.GuiIDTC, dm: $scope.DanhGia.DiemManh, dy: $scope.DanhGia.DiemYeu, kh: $scope.DanhGia.KeHoachCaiTien, mt: $scope.MoTa }
                }).then(function success(response) {

                    var result = response.data;

                    if (result.error === 0) {
                        $scope.GetData(1, "");
                        $scope.allDanhMuc.unshift(result.data);
                        $scope.GetData();
                        $scope.GetTieuChiDuKienAll(1);
                        hideModel("insertmodal");

                        showNotify("Đã cập nhật thông tin");

                    } else {

                        alert(result.msg);

                    }

                    showLoader(false);

                }
                    , function error(response) {
                        showNotify("connect has disconnect");
                        showLoader(false);
                    });

            };


            // xoa du lieu
            $scope.sendDelete = function (index) {
                var info = $scope.allTieuChiDuKien[index];

                var r = confirm("Bạn muốn xóa không ?");
                if (r == true) {
                    showLoader(true);

                    $http({
                        method: "POST",
                        url: "/ThoiGianCungCap/delete",
                        data: { id: info.GuiIDTC }
                    }).then(
                        function success(response) {

                            var result = response.data;

                            if (result.error == 0) {

                                // var findIndex = getSelectedIndex(result.data.CountryID);

                                // if (findIndex !== -1) {
                                $scope.allDanhMuc.splice(index, 1);
                                $scope.GetData();
                                $scope.GetTieuChiDuKienAll(1);
                                //  }

                            } else {

                                alert(result.msg);

                            }

                            showLoader(false);

                        },
                        function errror(response) {
                            showLoader(false);
                            showNotify("connect has disconnect");
                        }
                        );
