
@{
    ViewBag.Title = "Thông tin tiêu chuẩn";
}

<div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul class="nav nav-tabs bar_tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#tab_danhmuc" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false">Danh sách tiêu chuẩn</a>
                        </li>
                        <li role="presentation">
                            <a href="#tab_chitiet" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Danh sách tiêu chí</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active in" id="tab_danhmuc" aria-labelledby="home-tab">
                            <!-- begin tab-->
                            <div class="row">
                                <!-- thong tin-->
                                <div class="table-responsive">
                                    <table class="table table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <th>Tiêu chuẩn</th>
                                                <th>Nội dung</th>
                                                <th>Tổng số tiêu chí</th>
                                                <th>#</th>
                                                <th>#</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr ng-repeat="item in allDanhMuc">
                                                <td>{{item.IDTieuChuan}}</td>
                                                <td>{{item.NoiDung}}</td>
                                                <td>{{item.TieuChi}}</td>
                                                <td><a href="#" ng-click="edit($index)">Chi tiết</a></td>
                                                <td><a href="#" ng-click="sendDelete($index)">Xóa</a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- end tab-->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab_chitiet" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <th>STT</th>
                                                <th>Tiêu chuẩn</th>
                                                <th>Mã tiêu chí</th>
                                                <th>Tiêu chí</th>
                                                <th>Xem chỉ số</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in allTieuChi">
                                                <td>{{$index + 1}}</td>
                                                <td>{{item.NoiDung}}</td>
                                                <td>{{item.IDTieuChi}}</td>
                                                <td>{{item.NoiDungTC}}</td>
                                                <td><a href="#" ng-click="xemchiso($index)">Chi tiết</a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tao model them moi-->
    <div id="insertmodal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{modaltitle}}</h4>
                </div>
            <!--panel dialog-->
                <div class="x_panel">
                    <div class="x_content">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#tab_noidung" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false">Nội dung</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisoa" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số a</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisob" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số b</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisoc" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số c</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active in" id="tab_noidung" aria-labelledby="home-tab">
                                    <!-- begin tab-->
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <input type="text" maxlength="10" class="form-control" ng-model="Info.NamHoc" required />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end tab-->
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_chisoa" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Nội dung</label>
                                                <input type="text" maxlength="10" class="form-control" ng-model="Info.NamHoc" required />
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Yêu cầu (Nội hàm)</label>
                                                <input type="text" maxlength="10" class="form-control" ng-model="Info.NamHoc" required />
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Gợi ý</label>
                                                <input type="text" maxlength="10" class="form-control" ng-model="Info.NamHoc" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end modal content-->
        </div>
    </div>
    <!-- end modal them-->
</div>


<!-- end content-->
@section scripts {

    <script>

        // tao controller
        var app = angular.module('myApp', ['ui.bootstrap']);
        app.filter('unsafe', function ($sce) {
            return function (val) {
                return $sce.trustAsHtml(val);
            };
        });
        app.controller('myCtrl', function ($scope, $http) {

            // phan trang
            $scope.numPages;
            $scope.itemPerPage;
            $scope.totalItems;
            $scope.currentPage = 1;
            $scope.maxSize = 5;
            $scope.pageChanged = function () {
                $scope.GetData($scope.currentPage);
            };

            // lay du lieu
            $scope.allDanhMuc = [];
            $scope.GetData = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/TieuChuan/getTieuChuan?page=" + page + "&search=" + search
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allDanhMuc = response.data.data;
                        $scope.itemPerPage = response.data.pageSize;
                        $scope.totalItems = response.data.toltalSize;
                        $scope.numPages = Math.round($scope.totalItems / $scope.itemPerPage);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ham lay chi tiet tieu chi
            $scope.allTieuChi = [];
            $scope.GetTieuChi = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/TieuChuan/getTieuChi?page=" + page + "&idtieuchuan=" + search
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allTieuChi = response.data.data;
                        $scope.itemPerPage = response.data.pageSize;
                        $scope.totalItems = response.data.toltalSize;
                        $scope.numPages = Math.round($scope.totalItems / $scope.itemPerPage);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ket thuc ham lay goi tieu chi

            $scope.GetData(1, "");
            //
            // khoi tao bien dung cho create va edit
            $scope.Info = {};
            $scope.IsAction = '';

            $scope.addNew = function () {

                $scope.Info = { "IDTieuChuan": "", "NoiDung": "","MoDau":"","KetLuan":"" };

                $scope.modaltitle = "Thêm tiêu chuẩn";
                //$scope.ZoneIDDisable = false;
                $scope.IsAction = 'add';
                showModel("insertmodal")

            };

            $scope.edit = function (index) {

                var info = $scope.allDanhMuc[index];
                $scope.Info = angular.copy(info);
                $('.nav-tabs a[href="#tab_chitiet"]').tab('show');
                $scope.GetTieuChi(1, $scope.Info.GuiID);

            };

            $scope.xemchiso = function (index) {

                var infotc = $scope.allTieuChi[index];
                $scope.InfoTC = angular.copy(infotc);
                $scope.modaltitle = "Xem tiêu chí";
                $scope.IsAction = 'edit';
                showModel("insertmodal");

            };


            // tim index theo ma tinh
            function getSelectedIndex(id) {
                for (var i = 0; i < $scope.allDanhMuc.length; i++)
                    if ($scope.allDanhMuc[i].NamHoc == id)
                        return i;
                return -1;
            };

            // action
            $scope.finishForm = function (isValid) {
                if (isValid) {
                    if ($scope.IsAction === 'add') {
                        $scope.sendCreate();
                    } else if ($scope.IsAction === 'edit') {
                        $scope.sendEdit();
                    } else if ($scope.IsAction === 'delete') {
                        $scope.sendDelete();
                    }

                } else {
                    showNotify('our form is missing');
                }
            }


            // them tinh
            $scope.sendCreate = function () {
                showLoader(true);
                $http({
                    method: "POST",
                    url: "/TieuChuan/create",
                    data: { tieuchuan: $scope.Info }
                }).then(function success(response) {

                    var result = response.data;
                    console.log(result);
                    if (result.error === 0) {

                        $scope.allDanhMuc.unshift(result.data);

                        hideModel("insertmodal");

                        showNotify("Đã thêm tiêu chuẩn");

                    } else {

                        alert(result.msg);

                    }

                    showLoader(false);

                }
                    , function error(response) {
                        showNotify("connect has disconnect");
                        showLoader(false);
                    });

            };

            // cap nhat tinh
            $scope.sendEdit = function () {
                console.log($scope.Info);
                showLoader(true);

                $http({
                    method: "POST",
                    url: "/TieuChuan/edit",
                    data: { tieuchuan: $scope.Info}
                }).then(
                    function success(response) {
                        $scope.GetData(1, "");
                        var result = response.data;

                        if (result.error == 0) {

                            var findIndex = getSelectedIndex(result.data.NamHoc);

                            if (findIndex !== -1) {
                                $scope.allDanhMuc[findIndex] = angular.copy(result.data);
                            }

                            showNotify("Đã cập nhật");
                            hideModel("insertmodal");

                        } else {

                            alert(result.msg);

                        }

                        showLoader(false);

                    },
                    function errror(response) {
                        showLoader(false);
                        showNotify("connect has disconnect");
                    }
                    );
            };

            // xoa du lieu
            $scope.sendDelete = function (index) {
                var info = $scope.allDanhMuc[index];

                var r = confirm("Bạn muốn xóa không ?");
                if (r == true) {
                    showLoader(true);

                    $http({
                        method: "POST",
                        url: "/TieuChuan/delete",
                        data: { id: info.ID }
                    }).then(
                        function success(response) {

                            var result = response.data;

                            if (result.error == 0) {

                                // var findIndex = getSelectedIndex(result.data.CountryID);

                                // if (findIndex !== -1) {
                                $scope.allDanhMuc.splice(index, 1);
                                //  }

                            } else {

                                alert(result.msg);

                            }

                            showLoader(false);

                        },
                        function errror(response) {
                            showLoader(false);
                            showNotify("connect has disconnect");
                        }
                        );
                } else {

                }


            }

        });
        //-- end controller

    </script>
}



