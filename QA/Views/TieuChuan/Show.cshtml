
@{
    ViewBag.Title = "Thông tin tiêu chuẩn";
}

<div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>Tiêu chuẩn</th>
                                <th>Nội dung</th>
                                <th>Tiêu chí</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="(mindex,item) in allDanhMuc">
                                <td>{{item.IDTieuChuan}}</td>
                                <td>{{item.NoiDung}}</td>
                                <td>
                                    <table ng-init="GetTieuChi(mindex)" border="0">
                                        <tr>
                                            <td ng-repeat="item1 in item.allDetail">&nbsp;&nbsp;&nbsp;[<a ng-class="{'text-primary' : item1.Dat == true, 'text-danger' : item1.Dat == false}" href="#" ng-click="addNew(mindex,$index)">   {{item1.IDTieuChi}}  </a>]</td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- tao model them moi-->
    <div id="insertmodal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{modaltitle}}</h4>
                </div>
            <!--panel dialog-->
                <div class="x_panel">
                    <div class="x_content">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#tab_noidung" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=false">Nội dung</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisoa" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số a</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisob" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số b</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_chisoc" role="tab" data-toggle="tab" aria-expanded="false" ng-click="showEdit=true">Chỉ số c</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active in" id="tab_noidung" aria-labelledby="home-tab">
                                    <!-- begin tab-->
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <input type="text" maxlength="10" class="form-control" ng-model="Info.NoiDungTC" required />
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end tab-->
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_chisoa" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Nội dung</label>
                                                <textarea rows="2" class="form-control" ng-model="ChiSoA.NoiDung" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Yêu cầu (Nội hàm)</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoA.YeuCau" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Gợi ý</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoA.GoiY" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_chisob" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Nội dung</label>
                                                <textarea rows="2" class="form-control" ng-model="ChiSoB.NoiDung" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Yêu cầu (Nội hàm)</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoB.YeuCau" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Gợi ý</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoB.GoiY" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_chisoc" aria-labelledby="profile-tab">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Nội dung</label>
                                                <textarea rows="2" class="form-control" ng-model="ChiSoC.NoiDung" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Yêu cầu (Nội hàm)</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoC.YeuCau" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label>Gợi ý</label>
                                                <textarea rows="5" class="form-control" ng-model="ChiSoC.GoiY" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end modal content-->
        </div>
    </div>
    <!-- end modal them-->
</div>


<!-- end content-->
@section scripts {

    <script>

        // tao controller
        var app = angular.module('myApp', ['ui.bootstrap']);
        app.filter('unsafe', function ($sce) {
            return function (val) {
                return $sce.trustAsHtml(val);
            };
        });
        app.controller('myCtrl', function ($scope, $http) {

            // phan trang
            $scope.idtchuan;
            $scope.numPages;
            $scope.itemPerPage;
            $scope.totalItems;
            $scope.currentPage = 1;
            $scope.maxSize = 5;
            $scope.pageChanged = function () {
                $scope.GetData($scope.currentPage);
            };

            // lay du lieu
            $scope.allDanhMuc = [];
            $scope.GetData = function (page, search) {
                showLoader(true);
                $http({
                    method: "GET",
                    url: "/TieuChuan/getTieuChuan?page=" + page + "&search=" + search
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allDanhMuc = response.data.data;
                        $scope.itemPerPage = response.data.pageSize;
                        $scope.totalItems = response.data.toltalSize;
                        $scope.numPages = Math.round($scope.totalItems / $scope.itemPerPage);
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ham lay chi tiet tieu chi
            $scope.GetTieuChi = function (index) {
                $scope.alldetail = [];
                var info = $scope.allDanhMuc[index];
                $scope.Info = angular.copy(info);

                showLoader(true);
                $http({
                    method: "GET",
                    url: "/TieuChuan/getTieuChi?idtieuchuan=" + $scope.Info.GuiID
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allDanhMuc[index].allDetail = response.data.data;
                    }

                }, function myError(response) {
                    showLoader(false);
                    showNotify('Connect error');
                });
            }
            //ket thuc ham lay goi tieu chi
            $scope.GetData(1, "");
            //
            // khoi tao bien dung cho create va edit
            $scope.Info = {};
            $scope.IsAction = '';
            $scope.allChiSo = [];
            $scope.ChiSoA = [];
            $scope.ChiSoB = [];
            $scope.ChiSoC = [];
            $scope.addNew = function (mindex, id) {
                //kiểm tra xem neu chua co thi load mơi , nếu đã có thì load thông tin
                //gettieuchidukien
                //mindex ==> vi tri cua id tieu chuan , id vi tri cua tieu chi

                var info = $scope.allDanhMuc[mindex].allDetail[id];
                $scope.Info = angular.copy(info);
                //$scope.GetChiSo(1, $scope.Info.GuiIDTC);
                $scope.TieuChuanTieuChi = $scope.allDanhMuc[mindex].NoiDung + " - " + $scope.Info.NoiDungTC;

                $http({
                    method: "GET",
                    url: "/TieuChuan/getChiSo?idtieuchi=" + $scope.Info.GuiIDTC
                }).then(function mySuccess(response) {
                    showLoader(false);

                    if (response.data.error === 0) {

                        $scope.allChiSo = response.data.data;
                        $scope.ChiSoA = angular.copy($scope.allChiSo[0]);
                        $scope.ChiSoB = angular.copy($scope.allChiSo[1]);
                        $scope.ChiSoC = angular.copy($scope.allChiSo[2]);
                        $scope.IsAction = 'add';
                        $scope.modaltitle = "Xem tiêu chí - Tiêu chuẩn: " + $scope.Info.IDTieuChuan + " - Tiêu chí: " + $scope.Info.IDTieuChi;
                        showModel("insertmodal");

                    }
                        }, function myError(response) {
                            showLoader(false);
                            showNotify('Connect error');
                        });
                       
                //ket thuc lay dữ liệu điều kiện
            };

            $scope.edit = function (index) {

                var info = $scope.allDanhMuc[index];
                $scope.Info = angular.copy(info);
                $('.nav-tabs a[href="#tab_chitiet"]').tab('show');
                $scope.GetTieuChi(1, $scope.Info.GuiID);
                $scope.idtchuan = $scope.Info.IDTieuChuan;

            };

            $scope.xemchiso = function (index) {

                var infotc = $scope.allTieuChi[index];
                $scope.InfoTC = angular.copy(infotc);

                var info = $scope.allTieuChi[index];
                $scope.Info = angular.copy(info);
                console.log($scope.Info);

                //lay thong tin chi tiet cac chi so
                $scope.GetChiSo(1, $scope.InfoTC.GuiIDTC);

                $scope.modaltitle = "Xem tiêu chí - Tiêu chuẩn: " + $scope.idtchuan + " - Tiêu chí: " + $scope.InfoTC.IDTieuChi;
                $scope.IsAction = 'edit';
                showModel("insertmodal");

            };

            // action
            $scope.finishForm = function (isValid) {
                if (isValid) {
                    if ($scope.IsAction === 'add') {
                        $scope.sendCreate();
                    } else if ($scope.IsAction === 'edit') {
                        $scope.sendEdit();
                    } else if ($scope.IsAction === 'delete') {
                        $scope.sendDelete();
                    }

                } else {
                    showNotify('our form is missing');
                }
            }


            // them tinh
            $scope.sendCreate = function () {
                showLoader(true);
                $http({
                    method: "POST",
                    url: "/TieuChuan/create",
                    data: { tieuchuan: $scope.Info }
                }).then(function success(response) {

                    var result = response.data;
                    console.log(result);
                    if (result.error === 0) {

                        $scope.allDanhMuc.unshift(result.data);

                        hideModel("insertmodal");

                        showNotify("Đã thêm tiêu chuẩn");

                    } else {

                        alert(result.msg);

                    }

                    showLoader(false);

                }
                    , function error(response) {
                        showNotify("connect has disconnect");
                        showLoader(false);
                    });

            };

            // cap nhat tinh
            $scope.sendEdit = function () {
                console.log($scope.Info);
                showLoader(true);

                $http({
                    method: "POST",
                    url: "/TieuChuan/edit",
                    data: { tieuchuan: $scope.Info}
                }).then(
                    function success(response) {
                        $scope.GetData(1, "");
                        var result = response.data;

                        if (result.error == 0) {

                            var findIndex = getSelectedIndex(result.data.NamHoc);

                            if (findIndex !== -1) {
                                $scope.allDanhMuc[findIndex] = angular.copy(result.data);
                            }

                            showNotify("Đã cập nhật");
                            hideModel("insertmodal");

                        } else {

                            alert(result.msg);

                        }

                        showLoader(false);

                    },
                    function errror(response) {
                        showLoader(false);
                        showNotify("connect has disconnect");
                    }
                    );
            };

            // xoa du lieu
            $scope.sendDelete = function (index) {
                var info = $scope.allDanhMuc[index];

                var r = confirm("Bạn muốn xóa không ?");
                if (r == true) {
                    showLoader(true);

                    $http({
                        method: "POST",
                        url: "/TieuChuan/delete",
                        data: { id: info.ID }
                    }).then(
                        function success(response) {

                            var result = response.data;

                            if (result.error == 0) {

                                // var findIndex = getSelectedIndex(result.data.CountryID);

                                // if (findIndex !== -1) {
                                $scope.allDanhMuc.splice(index, 1);
                                //  }

                            } else {

                                alert(result.msg);

                            }

                            showLoader(false);

                        },
                        function errror(response) {
                            showLoader(false);
                            showNotify("connect has disconnect");
                        }
                        );
                } else {

                }


            }

        });
        //-- end controller

    </script>
}



